@model DVD.Web.Models.DVDCategoryModel

@{
    ViewData["Title"] = "UpdateDVDCategory";
    if (ViewData["Error"] != null)
    {
        <script>
                alert("@ViewData["Error"]");
        </script>
    }
}

<h1>Update DVD Category</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("UpdateDVDCategory", "DVDCategory", FormMethod.Post, new { @role = "form", @id = "UpdateDVDCategory" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x=>x.CategoryNumber)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryDescription" class="control-label"></label>
                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control", @placeholder = "Category Description" })
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeRestricted" class="control-label"></label>
                @Html.TextBoxFor(x => x.AgeRestricted, new { @class = "form-control", @placeholder = "Age Restricted" })
                <span asp-validation-for="AgeRestricted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
