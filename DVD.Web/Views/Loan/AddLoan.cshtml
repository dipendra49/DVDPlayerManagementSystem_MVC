@model DVD.Web.Models.LoanModel

@{
    ViewData["Title"] = "AddLoan";
    if (ViewData["Error"] != null)
    {
        <script>
                alert("@ViewData["Error"]");
        </script>
    }
}

<h1>Add Loan</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("AddLoan", "Loan", FormMethod.Post, new { @role = "form", @id = "AddLoan" }))
        {
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoanTypeNumber" class="control-label"></label>
                @Html.DropDownListFor(x => x.LoanTypeNumber, Model.LoanTypeList, new { @class = "form-control" })
                <span asp-validation-for="LoanTypeNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CopyNumber" class="control-label"></label>
                @Html.DropDownListFor(x => x.CopyNumber, Model.DVDCopyList, new { @class = "form-control" })
                <span asp-validation-for="CopyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberNumber" class="control-label"></label>
                @Html.DropDownListFor(x => x.MemberNumber, Model.MemberList, new { @class = "form-control" })
                <span asp-validation-for="MemberNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOut" class="control-label"></label>
                @Html.TextBoxFor(x => x.DateOut, new { @type = "date", @class = "form-control", @placeholder = "Date Out" })
                <span asp-validation-for="DateOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDue" class="control-label"></label>
                @Html.TextBoxFor(x => x.DateDue, new { @type = "date", @class = "form-control", @placeholder = "Date Due" })
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReturned" class="control-label"></label>
                @Html.TextBoxFor(x => x.DateReturned, new { @type = "date", @class = "form-control", @placeholder = "Date Returned" })
                <span asp-validation-for="DateReturned" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

